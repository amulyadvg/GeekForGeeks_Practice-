#include <iostream>
#include<math.h>

using namespace std;

int main() {
  int a[20];
  int n;
  int ele, pos;
  
  cout << "Enter number of elements: " << endl;
  cin >> n;
  
  cout << "Enter array elements: " << endl;
  for (int i=0; i < n; i++) {
    cin >> a[i];
  }

  cout << "Enter element to search: " << endl;
  cin >> ele;
  
  for (int i=0; i < n; i++) {
    if (a[i] == ele) {
      pos = i;
    }
  }
  
  cout << "Element: " << ele << " is at position: " << pos+1 << endl;
return 0;
}
